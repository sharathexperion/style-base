{
  "extends": [
    "stylelint-config-standard-scss"
  ],
  "ignoreFiles": ["dist/**/*", "node_modules/**/*"],
  "rules": {
    "no-empty-source": null,
    "no-descending-specificity": null,
    "selector-max-compound-selectors": null,
    "selector-max-specificity": null,
    "max-nesting-depth": null,
    "scss/at-rule-no-unknown": null,
    "scss/operator-no-newline-after": null,
    "scss/operator-no-newline-before": null,
    "value-keyword-case": [
      "lower",
      {
        "ignoreKeywords": ["currentColor"]
      }
    ],
    "property-no-vendor-prefix": [
      true,
      {
        "ignoreProperties": [
          "-webkit-mask-image",
          "-webkit-mask-size",
          "-webkit-mask-position",
          "-webkit-mask-repeat",
          "-webkit-user-select"
        ]
      }
    ],
    "property-disallowed-list": [
      [
        "margin-left",
        "margin-right",
        "padding-left",
        "padding-right",
        "left",
        "right",
        "border-left",
        "border-right",
        "border-left-width",
        "border-right-width",
        "border-left-style",
        "border-right-style",
        "border-left-color",
        "border-right-color",
        "border-top-left-radius",
        "border-top-right-radius",
        "border-bottom-left-radius",
        "border-bottom-right-radius"
      ],
      {
        "message": "Physical properties (left/right) are disallowed. Use logical properties (inline-start/inline-end) for RTL support."
      }
    ],
    "declaration-property-value-disallowed-list": [
      {
        "text-align": ["left", "right"],
        "float": ["left", "right"],
        "clear": ["left", "right"]
      },
      {
        "message": "Physical values (left/right) are disallowed. Use logical values (start/end/inline-start/inline-end) for RTL support."
      }
    ]
  }
}
