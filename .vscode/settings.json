{
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  "editor.formatOnPaste": false,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,

  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,

  "stylelint.validate": ["css", "scss"]
}